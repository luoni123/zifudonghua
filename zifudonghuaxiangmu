#include<stdio.h>
#include<windows.h>
#include<iostream>

#define WEIGHT 64
#define HEIGHT 68
#define N WEIGHT*HEIGHT

void show(char* str);
char ch[N];
FILE *fp;
//d:\\\\homework\\txt\\ASCII-dance 001.txt



int main()
{
	char name[57]="d:\\\\homework\\txt\\ASCII-dance 001.txt";
	int i;
	for(i=1;i<500;i++)
	{
		name[29]=i/100+48;
		name[30]=(i%100)/10+48;
		name[31]=i%10+48;
		
		show(name);
		Sleep(1);
		system("cls");
	}
	return 0;
}


void show(char* str)
{
	if((fp=fopen(str,"r"))==NULL)
	{
		printf("null pointer\n");
	}
	else
	{
		while(fgets(ch,N,fp)!=NULL)
		{
			printf("%s",ch);
		}
	}

}
